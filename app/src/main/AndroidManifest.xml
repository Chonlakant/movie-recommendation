<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.kasper.nottoday" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".NotTodayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.takes.FooActivity"
            android:label="@string/title_activity_foo" >
        </activity>
        <activity
            android:name=".activities.takes.BarActivity"
            android:label="@string/title_activity_bar" >
        </activity>
        <activity
            android:name=".activities.takes.ComputeActivity"
            android:label="@string/title_activity_compute" >
        </activity>
        <activity
            android:name=".activities.ItemsActivity"
            android:label="@string/title_activity_items" >
        </activity>
        <activity
            android:name=".movie.MovieActivity"
            android:label="@string/title_activity_movie" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
